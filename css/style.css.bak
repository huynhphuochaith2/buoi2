main{
	width: 900px;
	margin: 0 auto 0 auto;
}

header{
	width: 900px;
	height:143px;
	background: url(../images/banner.jpg);
}

section{
	width:900px;
}

aside{
	width:220px;
	float:left;
}

aside h2{
	color:blue;
	background: url(../images/t_l.gif);
	height:30px;
	font-size: 18px;
	padding:5px 0 0 5px;/*trên phải dưới trái*/
	box-sizing: border-box;
	margin-bottom: 0;
}

aside ul{
	list-style-image: url(../images/li.gif);
	border: 1px solid #1e90ff;
	padding: 5px 0 5px 20px;
	margin-top: 0;
}

a:link{        /*khi đưa chuột vào*/
	color:#1e90ff;
	text-decoration:none;
}

a:hover{       /*khi chưa click vào*/
	color:red;
	text-decoration:underline;
}

a:visited{     /*khi đã click vào*/
	color:grey;
	
}

article{
	width: 670px;/*chừa 10px khoảng trống */
	float: right;
	background:url(../images/bg_post.gif) no-repeat right bottom;
}

article p{
	text-align:justify;
}

footer{
	width: 900px;
	height:50px;
	background: #1e90ff;
	clear:both;
	
}